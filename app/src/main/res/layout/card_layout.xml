<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/auctName"
            android:text="Auction Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="30dp"
            android:textColor="@color/colorPrimary"


            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/auctDate"
            android:text="Auction Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="30dp"
            android:textColor="@color/colorPrimary"

            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"

            android:layout_below="@+id/auctName"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/auctNum"
            android:text="Auction Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="30dp"
            android:textColor="@color/colorPrimary"

            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/auctDate"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</android.support.v7.widget.CardView>